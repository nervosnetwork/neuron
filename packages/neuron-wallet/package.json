{
  "name": "neuron-wallet",
  "productName": "Neuron",
  "description": "CKB Neuron Wallet",
  "homepage": "https://www.nervos.org/",
  "version": "0.31.0",
  "private": true,
  "author": {
    "name": "Nervos Core Dev",
    "email": "dev@nervos.org",
    "url": "https://github.com/nervosnetwork/neuron"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nervosnetwork/neuron"
  },
  "main": "dist/main.js",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "start:dev": "yarn run build && electron .",
    "build": "ttsc && ncp ./src/block-sync-renderer/index.html ./dist/block-sync-renderer/index.html",
    "clean": "rimraf dist/*",
    "test": "jest --runInBand --collect-coverage",
    "test:watch": "jest --watch",
    "lint": "eslint --fix --ext .ts,.js src",
    "precommit": "lint-staged",
    "rebuild:nativemodules": "electron-builder install-app-deps && yarn rebuild:neondeps",
    "rebuild:neondeps": "electron-build-env neon build -p ../../node_modules/@ckb-lumos/indexer --release"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@ckb-lumos/indexer": "0.3.0",
    "@nervosnetwork/ckb-sdk-core": "0.32.0",
    "@nervosnetwork/ckb-sdk-utils": "0.32.0",
    "archiver": "3.1.1",
    "async": "3.2.0",
    "bn.js": "4.11.8",
    "chalk": "3.0.0",
    "dotenv": "8.2.0",
    "electron-log": "4.0.0",
    "electron-updater": "4.2.0",
    "electron-window-state": "5.0.3",
    "elliptic": "6.5.1",
    "i18next": "17.0.13",
    "leveldown": "5.4.1",
    "levelup": "4.3.2",
    "reflect-metadata": "0.1.13",
    "rxjs": "6.5.3",
    "sha3": "2.0.7",
    "sqlite3": "4.1.1",
    "subleveldown": "^4.1.4",
    "typeorm": "0.2.20",
    "uuid": "3.3.3"
  },
  "devDependencies": {
    "@nervosnetwork/ckb-types": "0.32.0",
    "@types/archiver": "3.1.0",
    "@types/async": "3.2.3",
    "@types/electron-devtools-installer": "2.2.0",
    "@types/elliptic": "6.4.9",
    "@types/jest-when": "2.7.1",
    "@types/leveldown": "4.0.2",
    "@types/levelup": "4.3.0",
    "@types/sqlite3": "3.1.5",
    "@types/uuid": "3.4.5",
    "axios": "0.19.0",
    "devtron": "1.4.0",
    "electron": "7.1.14",
    "electron-build-env": "0.2.0",
    "electron-builder": "22.4.0",
    "electron-devtools-installer": "2.2.4",
    "electron-notarize": "0.2.1",
    "jest-when": "2.7.2",
    "lint-staged": "9.2.5",
    "neon-cli": "0.4.0",
    "neuron-ui": "0.31.0",
    "rimraf": "3.0.0",
    "ts-transformer-imports": "0.4.3",
    "ttypescript": "1.5.10"
  }
}
