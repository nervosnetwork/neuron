{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "incremental": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    },
    "plugins": [
      { "transform": "@zerollup/ts-transform-paths" }
    ],
    "lib": [
      "es2019",
      "dom"
    ]
  },
  "include": ["src/**/*"]
}
