{
  "name": "neuron",
  "description": "CKB Neuron Wallet",
  "version": "0.1.0",
  "private": true,
  "author": {
    "name": "Nervos Core Dev",
    "email": "dev@nervos.org",
    "url": "https://github.com/nervosnetwork/neuron"
  },
  "main": "dist/main.js",
  "license": "MIT",
  "scripts": {
    "cp:pages": "rm -rf ./pages && cp -r ../react-app/build ./pages",
    "build": "tsc",
    "watch": "concurrently \"tsc -w\" \"nodemon ./dist/main.js --exec ./node_modules/.bin/electron .\"",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "start": "yarn run build && electron .",
    "package-win": "electron-builder --win --x64  --project ../../ -c packages/electron-app/electron-builder.yml -c.extraMetadata.main=packages/electron-app/dist/main.js",
    "package-mac": "electron-builder --mac --project ../../ -c packages/electron-app/electron-builder.yml -c.extraMetadata.main=packages/electron-app/dist/main.js",
    "package-linux": "electron-builder --linux --project ../../ -c packages/electron-app/electron-builder.yml -c.extraMetadata.main=packages/electron-app/dist/main.js"


  },
  "dependencies": {},
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "electron": "^4.0.1",
    "electron-builder": "^20.38.5",
    "tslint": "^5.12.1"
  }
}
