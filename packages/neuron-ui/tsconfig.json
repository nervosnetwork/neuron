{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "types": ["@types/jest"],
    "typeRoots": [
      "src/types",
      "node_modules/@nervosnetwork/ckb-types",
      "node_modules/@types"
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src"
  ]
}
